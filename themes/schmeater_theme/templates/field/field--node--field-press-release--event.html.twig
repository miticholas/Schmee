{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes }} class="press-release-file">
      {% for item in items %}
        <div{{ item.attributes }} class="press-release-file">{{ item.content }}</div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes }} class="press-release-file">{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes }}>
    <div{{ title_attributes }} class="press-release-file">{{ label }}</div>
    {% if multiple %}
      <div class="press-release-file">
    {% endif %}
    {% for item in items %}
      <div{{ item.attributes }} class="press-release-file">{{ item.content }}</div>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
